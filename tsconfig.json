{
    "compilerOptions": {
        "lib": ["es2017"],
        "module": "commonjs",
        "noImplicitAny": false,
        "declaration": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "lib/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
